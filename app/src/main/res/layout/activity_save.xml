<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SaveActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:layout_margin="15sp"
            android:id="@+id/backsave9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_chevron_left_back_24dp" />
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="bottom"
            android:text="Saved Information"
            android:layout_gravity="center|bottom"
            android:layout_width="250dp"
            android:layout_height="70dp" />
        <Button
            android:layout_margin="15sp"
            android:id="@+id/morebtt9"
            android:layout_gravity="end"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_widgets_more_24dp"/>
    </FrameLayout>
    <TextView
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Photos"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/kaisvaneti"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/kaitbilisi"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savemcxeta"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/saveparlamenti"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savecxraapp"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/hiking1"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/sadeb"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Locations"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/locicon"
                android:layout_margin="3dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="I.Chavchavadzis Street"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/locicon"
                android:layout_margin="3dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="17sp"
                android:maxLines="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="I.Chavchavadzis Street"/>

        </LinearLayout>


    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/locicon"
                android:layout_margin="3dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="I.Chavchavadzis Street"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/locicon"
                android:layout_margin="3dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="17sp"
                android:maxLines="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="I.Chavchavadzis Street"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Informaions"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:text="* Georgian National Museum"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:text="* Georgian National Museum"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/satarr"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>
