<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SaveActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/backsave"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:background="@drawable/baackkk" />
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="bottom"
            android:text="Saved Information"
            android:layout_gravity="center|bottom"
            android:layout_width="250dp"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/morebtt3"
            android:layout_gravity="end"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/dots"/>
    </FrameLayout>
    <TextView
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Photos"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/saveborjomi"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/saveyvavilebi"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savemcxeta"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/saveparlamenti"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savecxraapp"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savekakheti"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:src="@drawable/savesvaneti"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Locations"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/locatioon"
            android:layout_width="200dp"
            android:layout_height="75dp"/>
        <ImageView
            android:src="@drawable/locatioon"
            android:layout_width="200dp"
            android:layout_height="75dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/locatioon"
            android:layout_width="200dp"
            android:layout_height="75dp"/>
        <ImageView
            android:src="@drawable/locatioon"
            android:layout_width="200dp"
            android:layout_height="75dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Informaions"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"/>
    



</LinearLayout>