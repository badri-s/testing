<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/kaitbilisi" />

            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/hiking1" />



            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/sighnaghi" />

            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/rabaatii" />
            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/kaisvaneti" />
            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:background="@drawable/khevi"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="650dp"
        android:layout_margin="-20dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/lierraai"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@drawable/singupin"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10sp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/video" />

            <TextView
                android:id="@+id/livecamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Live Camera"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lokation"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/singupin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="Search For Location"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/pointbtt"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/simrgvale"
            android:text="Points"
            android:textAlignment="center"
            android:textColor="#DF000000"
            android:textSize="50sp"
            android:textStyle="bold" />


    </LinearLayout>

</FrameLayout>