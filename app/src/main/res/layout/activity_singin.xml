<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SinginActivity">
    <LinearLayout
        android:id="@+id/singinlay"
        android:background="@drawable/singupin"
        android:layout_gravity="bottom"
        android:layout_margin="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/singupinii"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <Button
                android:background="@drawable/singupin"
                android:layout_width="125dp"
                android:layout_marginLeft="4dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="sing in"/>
            <Button
                android:id="@+id/singupbutton"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Sing Up"
                android:textSize="25dp"
                android:background="@drawable/singupinii"/>

        </LinearLayout>
        <FrameLayout
            android:layout_margin="28dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="textEmailAddress"
                android:hint="E-Mail addres"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">
                <EditText
                    android:inputType="textPassword"
                    android:hint="Pasword"
                    android:layout_width="160dp"
                    android:layout_height="50dp"/>
                <Button
                    android:text="Forgot"
                    android:textSize="10dp"
                    android:textColor="#041C77"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <Button
                android:id="@+id/reginbutton"
                android:textSize="25dp"
                android:text="sing in"
                android:textColor="#fff"
                android:background="@drawable/singinbutton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>