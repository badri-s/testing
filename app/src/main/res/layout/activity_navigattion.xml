<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kentiaraparlamenti"
    tools:context=".NavigattionActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navi"/>
    <ImageView
        android:id="@+id/profile2"
        android:src="@drawable/profile"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <ImageView
        android:layout_marginTop="-40dp"
        android:id="@+id/parlamenta"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/kentiaraparlamenti"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/down"
            android:layout_width="50dp"
            android:layout_height="30sp"
            android:background="@drawable/down"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="80sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/videodaiwye"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_weight="25"
                android:text="video"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/vrbttn"
                android:layout_weight="25"
                android:textStyle="italic"
                android:textSize="20sp"
                android:text="VR"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_weight="25"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                android:text="photo"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/info1"
                android:layout_weight="25"
                android:textStyle="italic"
                android:textSize="20sp"
                android:text="info"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <HorizontalScrollView
            android:layout_marginBottom="30sp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/aprirli"
                    android:src="@drawable/aprili"
                    android:layout_margin="10sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:id="@+id/xalxi"
                    android:src="@drawable/savecxraapp"
                    android:layout_margin="10sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/nadzvi"
                    android:src="@drawable/nadzvi"
                    android:layout_margin="10sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/shavi"
                    android:src="@drawable/saveparlamenti"
                    android:layout_margin="10sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/sadeb"
                    android:src="@drawable/sadeb"
                    android:layout_margin="10sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </HorizontalScrollView>
    </FrameLayout>


</FrameLayout>